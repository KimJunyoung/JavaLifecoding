package basic_section3_bus;

public class Bus {

	private int busNum ;
	private int earnMoney;
	private int count;
	private int cost = 1000;
	
	public Bus(int busNum) {
		this.busNum = busNum;
		this.earnMoney = 0;
		this.count = 0;
	}
	
	public void takeBus() {
		this.earnMoney += this.cost;
		this.count += 1;
	}
	
	
}
