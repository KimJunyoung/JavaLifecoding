package basic_section5_1;

public class Customer {
	private int customerId;
	private String customerName;
	private String customerGrade;
	
	int bonusPoint;
	double bonusRatio;
	
	public Customer() {
		customerGrade = "Silver";
		bonusRatio = 0.01;
	}
	
	public int calcPrice(int price) {
		bonusPoint += price * bonusRatio;
		return price;
	}
}
